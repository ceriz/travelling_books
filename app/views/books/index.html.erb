<h1>Listing books</h1>

<table class="books-table">
  <thead>
    <tr>
      <th>Tittle</th>
      <th>Author</th>
      <th>Description</th>
      <th>City</th>
      <th>Picture</th>
      <th>Barcode</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.tittle %></td>
        <td><%= book.author %></td>
        <td><%= book.description %></td>
        <td><%= book.city %></td>
        <td><%= book.picture %></td>
        <td><%= book.barcode %></td>
        <td><%= link_to 'Show', book %></td>
        <td><%= link_to 'Edit', edit_book_path(book) %></td>
        <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

